<%= form_with model: @restaurant, local: true do |form| %>

  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  
  <div>
    <%= form.label :cuisine %>
    <%= form.text_field :cuisine %>
  </div>

  <div>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>
 
  <div>
    <%= form.submit %>
  </div>

<% end %>